<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Marta Łępicka</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Visualize point clouds with different options</brief>
			<full>Options: simple, with normals ... to be continued</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="0.1">
				<Component name="SequenceRGB" type="CvBasic:Sequence" priority="1" bump="1">
					<param name="sequence.directory">/home/mlepicka/012/savanah/</param>
					<param name="sequence.pattern">col*.*</param>
					<param name="mode.loop">0</param>
					<param name="mode.triggered">0</param>				
				</Component>
				<Component name="SequenceDepth" type="CvBasic:Sequence" priority="2" bump="1">
					<param name="sequence.directory">/home/mlepicka/012/savanah/</param>
					<param name="sequence.pattern">dep*.*</param>	
					<param name="mode.loop">0</param>
					<param name="mode.triggered">0</param>		
				</Component>
				<Component name="SequenceMask" type="CvBasic:Sequence" priority="3" bump="1">
					<param name="sequence.directory">/home/mlepicka/012/savanah/</param>
					<param name="sequence.pattern">mas*.*</param>
					<param name="mode.loop">0</param>
					<param name="mode.triggered">0</param>		
				</Component>
				<Component name="CameraInfo" type="CvCoreTypes:CameraInfoProvider" priority="5" bump="1">
					<param name="camera_matrix">525 0 319.5; 0 525 239.5; 0 0 1</param>
				</Component>
				<Component name="Converter" type="PCL:DepthConverter" priority="4" bump="1">
				</Component>
				<Component name="Normals" type="SIFTObjectModel:NormalEstimation" priority="7" bump="1">
				</Component>
			</Executor>
			<!--<Executor name="Visualization" period="1">
				<Component name="WindowPCL" type="PCL:CloudViewer" priority="1" bump="0">
				</Component> 

			</Executor>-->
			<Executor>
                                <Component name="Visualizer" type="SIFTObjectModel:Visualization" priority="1" bump="0">
					<param name="filenames">/home/mlepicka/modele/savanah_v2_cala_chmura_xyzrgb.pcd</param>
				</Component>
			</Executor>
		</Subtask>
	</Subtasks>

	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="SequenceRGB.out_img">
			<sink>Converter.in_color</sink>
		</Source>
		<Source name="SequenceDepth.out_img">	
			<sink>Converter.in_depth</sink>		
		</Source>
		<Source name="SequenceMask.out_img">
			<sink>Converter.in_mask</sink>	
		</Source>
		<Source name="CameraInfo.out_camera_info">
			<sink>Converter.in_camera_info</sink>	
		</Source>	
		<Source name="Converter.out_cloud_xyzrgb">
			<sink>Normals.in_cloud_xyzrgb</sink>
		</Source>
		<Source name="Normals.out_cloud_xyzrgb_normals">
			<sink>Visualizer.in_cloud_xyzrgb_normals</sink>
		</Source>	
	</DataStreams>
</Task>
