<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Micha≈Ç Laszkowski</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Generates SOM and stores it in PCD file</brief>
                        <full></full>
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="1">
                                <Component name="Generator" type="SIFTObjectModel:CylinderModelGenerator" priority="1" bump="10">
                                        <param name="dataJSONname">/home/discode/cylinders/dataset/test/test.json</param>
				</Component>
                                <Component name="Writer" type="SIFTObjectModel:SOMJSONWriter" priority="2" bump="0">
                                        <param name="SOM">test_cylinder</param>
                                        <param name="directory">/home/discode/cylinders/models/</param>
                                </Component>
			</Executor>

                        <Executor name="Visualization" period="1">d
                                <Component name="WindowPCL" type="SIFTObjectModel:CloudViewer" priority="1" bump="0">
<!--                                    <param name="coordinate_system">false</param>-->
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
                <Source name="Generator.out_cloud_xyzrgb">
                        <sink>Writer.in_cloud_xyzrgb</sink>
                        <sink>WindowPCL.in_cloud_xyzrgb</sink>
                </Source>
                <Source name="Generator.out_cloud_xyzsift">
                        <sink>Writer.in_cloud_xyzsift</sink>
                        <sink>WindowPCL.in_cloud_xyzsift</sink>
                </Source>
                <!--
                <Source name="Generator.out_mean_viewpoint_features_number">
                        <sink>Writer.in_mean_viewpoint_features_number</sink>
                </Source>-->
	</DataStreams>
</Task>




